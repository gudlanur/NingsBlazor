@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerModel.CustomerName" class="control-label"></label>
                <input asp-for="CustomerModel.CustomerName" class="form-control" />
                <span asp-validation-for="CustomerModel.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerModel.Location" class="control-label"></label>
                <input asp-for="CustomerModel.Location" class="form-control" />
                <span asp-validation-for="CustomerModel.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerModel.CustomerOrder" class="control-label"></label>
                <input asp-for="CustomerModel.CustomerOrder" class="form-control" />
                <span asp-validation-for="CustomerModel.CustomerOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>